{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">User Profile</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    {% if user.profilePicFileName is not null %}
                        <img
                        src="{{ '/uploads/user/' ~ user.profilePicFileName }}"
                        alt="{{ user.email }}"
                        class="rounded-circle img-fluid mb-3"
                        style="max-height: 150px;"
                        />
                    {% else %}
                        <img
                        src="https://via.placeholder.com/150"
                        alt="Default Profile"
                        class="rounded-circle img-fluid mb-3"
                        style="max-height: 150px;"
                        />
                    {% endif %}
                </div>
                <div class="col-md-9">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row">Id:</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Name:</th>
                                <td>{{ user.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Email:</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Profile Picture Filename:</th>
                                <td>{{ user.profilePicFilename }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
            <div>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
